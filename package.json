{
  "name": "@stakegold/xdustconverter",
  "description": "xDustConverter - Convert small ESDT amounts to WEGLD",
  "version": "1.0.0",
  "author": "StakeGold",
  "license": "GPL-3.0-or-later",
  "repository": "@stakegold/xdustconverter.com",
  "dependencies": {
    "@apollo/client": "^3.7.3",
    "@buidly/dapp-core": "^0.1.4",
    "@elrondnetwork/dapp-core": "2.2.0",
    "@elrondnetwork/erdjs": "11.1.1",
    "@elrondnetwork/erdjs-network-providers": "1.1.1",
    "@fortawesome/fontawesome-svg-core": "6.1.0",
    "@fortawesome/free-solid-svg-icons": "6.1.0",
    "@fortawesome/react-fontawesome": "0.1.18",
    "axios": "0.24.0",
    "bignumber.js": "^9.1.1",
    "bootstrap": "4.6.2",
    "firebase": "^9.15.0",
    "graphql": "^16.6.0",
    "moment": "2.29.1",
    "react": "18.2.0",
    "react-bootstrap": "2.1.2",
    "react-dom": "18.2.0",
    "react-router-dom": "6.4.2",
    "web-vitals": "1.0.1"
  },
  "scripts": {
    "start:local": "npm run copy-local-config & HTTPS=false PORT=3001 react-scripts start",
    "start:devnet": "npm run copy-devnet-config & HTTPS=false PORT=3001 react-scripts start",
    "start:mainnet": "npm run copy-mainnet-config & HTTPS=false PORT=3001 react-scripts start",
    "build:devnet": "npm run copy-devnet-config & HTTPS=false PORT=3001 react-scripts build",
    "build:mainnet": "npm run copy-mainnet-config & HTTPS=false PORT=3001 react-scripts build",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint --ext js,ts,tsx src",
    "postbuild": "npm run create-version-file",
    "create-version-file": "git describe --always | sed 's/^/\"/;s/$/\"/' > build/version.json",
    "copy-local-config": "cp ./src/config.local.tsx ./src/config.tsx",
    "copy-devnet-config": "cp ./src/config.devnet.tsx ./src/config.tsx",
    "copy-mainnet-config": "cp ./src/config.mainnet.tsx ./src/config.tsx"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "26.0.15",
    "@types/node": "12.0.0",
    "@types/react": "18.0.24",
    "@types/react-dom": "18.0.8",
    "@types/react-router-dom": "5.1.7",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-react": "1.1.7",
    "eslint-config-react-app": "7.0.1",
    "eslint-config-standard": "17.0.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-import-resolver-typescript": "3.2.5",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "prettier": "2.7.1",
    "react-scripts": "5.0.1",
    "sass": "1.55.0",
    "typescript": "4.1.2"
  }
}
